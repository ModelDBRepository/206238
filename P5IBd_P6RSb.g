	      /P6RSbnet/P6RSb[]/{s}/Ex_ch12P5IBNMDA@all	    \
	      -relative			    \
	      -sourcemask box -1 -1  -1  1  1  1  \
	      -destmask   box -{destlim} -{destlim}  -1  {destlim}  {destlim}  1   \
          -probability 0.02326*{P5IBd_P6RSb_prob}

